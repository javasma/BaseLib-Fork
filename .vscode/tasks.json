{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "clean",
            "command": "dotnet",
            "type": "process",
            "args": [
            "clean",
            "${workspaceFolder}/BaseLib.sln"
            ],
            "problemMatcher": [],
            "group": {
            "kind": "build",
            "isDefault": false
            },
            "dependsOn": "remove-bin-obj"
        },
        {
            "label": "remove-bin-obj",
            "type": "shell",
            "command": "find ${workspaceFolder} -type d \\( -name bin -o -name obj \\) -exec rm -rf {} +",
            "problemMatcher": []
        },
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/BaseLib.sln",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary;ForceNoAlign"
            ],
            "problemMatcher": "$msCompile",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": "clean"
        },
        {
            "label": "pack",
            "command": "dotnet",
            "type": "process",
            "args": [
                "pack",
                "${workspaceFolder}/BaseLib.sln", 
                "-o",
                "${workspaceFolder}/../nugetpackages", 
                "-c",
                "Debug"
            ],
            "problemMatcher": "$msCompile",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
        
    ]
}